@{
    Layout = null;
}


@model Entity.Model.LoginRequest

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" />
     <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>



<body style="background-color:orangered">
<section class="vh-100">
  <div class="container py-7 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-xl-6">
        <div class="card" style="border-radius: 1rem;">
          <div class="row">
             
             <div class="col-12 d-flex align-items-center">
              <div class="card-body p-4 p-lg-5 text-black">

                                @using (Html.BeginForm("Index", "Login", FormMethod.Post))
                                {
                                    <div class="d-flex align-items-center mb-3 pb-1">
                    <i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i>
                    <span class="h1 fw-bold mb-0">Logo</span>
                    
                  </div>
                  @*<b style="color:red"  class="d-flex justify-content-center">@TempData["Message"]</b>*@
                  <div class="form-outline mb-4">
                                    @Html.TextBoxFor(m=>m.UserName,new{@class="form-control form-control-lg"})

                                    <label class="form-label" for="form2Example17">Email address</label>
                  </div>
                  <div class="form-outline mb-4">
                   

                                    @Html.PasswordFor(m=>m.Password ,new{@class="form-control form-control-lg"})
                                     <label class="form-label" for="form2Example27">Password</label>
                                     
                                     </div>

                                     <div class="pt-1 mb-4">
                    <button class="btn btn-dark btn-lg btn-block" type="submit">Login</button>
                  </div>

                  <a class="small text-muted" href="#!">Forgot password?</a>
                  <p class="mb-5 pb-lg-2" style="color: #393f81;">Don't have an account? <a href="Login/Register"
                      style="color: #393f81;">Register here</a></p>

                      <a href="#!" class="small text-muted">Terms of use.</a>
                  <a href="#!" class="small text-muted">Privacy policy</a>

                                }


              </div>
            </div>
          </div>
        </div>
        </div>
      </div>
    </div>
</section>
</body>




                  <script src="~/lib/jquery/dist/jquery.min.js"></script>

                 
   
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    
    <script src="~/js/site.js" asp-append-version="true"></script>
        @if(TempData["Message"]!= null)
        {
            <script>
            Swal.fire(
 '@TempData["Message"]',
  'You clicked the button!',
  '@TempData["Flag"]'
)
            </script>
        };
    

 
    }